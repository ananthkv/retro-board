{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["es2015", "es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "retro-board-*": ["../retro-board-*/src"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../retro-board-common/tsconfig.json" }]
}
